{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "compileOnSave": true,
  "include": [
    "src",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}